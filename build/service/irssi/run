#!/bin/bash
export HOME=/home/irssi/
set -e
echo "Starting session" >> /var/log/irssi-sessions.log
chpst -u irssi tmux new-session -s irssi -d irssi 2>&1 >> /var/log/irssi-sessions.log
echo "Session started" >> /var/log/irssi-sessions.log
sleep 10

